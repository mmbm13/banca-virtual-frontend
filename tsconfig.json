{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@/static": ["static"],
      "@/static/*": ["static/*"],
      "@/components": ["components"],
      "@/components/*": ["components/*"],
      "@/theme": ["theme"],
      "@/theme/*": ["theme/*"],
    }
  },
  "include": [
    "src",
    "types.d.ts"
  ]
}
